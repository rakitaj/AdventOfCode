    "version": "2.0.0",
    "tasks": [
        {
            "label": "Black - Current file",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "black", "${file}"]
        },
        {
            "label": "Black - All files",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "black", "."]
        }
    ]
}